{% apply inline_css(source('@styles/app.output.css')) %}
<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold text-body-emphasis">PDF To CSV Password Reset</h1>

    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">
            To reset your password, please visit the following link:<br>
            <a class="link-warning" href="{{ url('app_reset_password', {token: resetToken.token}) }}">{{ url('app_reset_password', {token: resetToken.token}) }}</a>
        </p>
    </div>

    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">This link will expire in <strong>{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}</strong>.</p>
    </div>

</div>
{% endapply %}
