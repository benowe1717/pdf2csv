{% extends 'base.html.twig' %}

{% block title %}Need Help?{% endblock %}

{% block body %}
<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold text-body-emphasis">Need Help?</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">
            If you need help using this tool or the tool isn't working correctly, please feel free to contact me below using any of the listed methods.
        </p>
    </div>

    <div class="col-lg-6 mx-auto">
        <div class="row justify-content-center mb-3">
            <div class="col-lg-4">
                <div class="text-center d-flex flex-column justify-content-center align-items-center py-3">
                    <div class="d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block mb-2">
                        <div class="d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block">
                            <svg class="bi bi-envelope" xmlns="http://www.w3.org/2000/svg" width="32px" height="32px" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="px-3 mt-2">
                        <h4 class="fw-bold mb-0">Email</h4>
                        <p class="mb-0 text-warning">support@projecttiy.com</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="text-center d-flex flex-column justify-content-center align-items-center py-3">
                    <div class="d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block mb-2">
                        <div class="d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32px" height="32px" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
                                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
                            </svg>
                        </div>
                    </div>
                    <div class="px-3 mt-2">
                        <h4 class="fw-bold mb-0">Github</h4>
                        <p class="mb-0">
                            <a class="text-warning" href="https://github.com/benowe1717/pdf2csv/issues" target="_blank">Submit an issue</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="text-center d-flex flex-column justify-content-center align-items-center py-3">
                    <div class="d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block mb-2">
                        <div class="d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32px" height="32px" fill="currentColor" class="bi bi-mastodon" viewBox="0 0 16 16">
                                <path d="M11.19 12.195c2.016-.24 3.77-1.475 3.99-2.603.348-1.778.32-4.339.32-4.339 0-3.47-2.286-4.488-2.286-4.488C12.062.238 10.083.017 8.027 0h-.05C5.92.017 3.942.238 2.79.765c0 0-2.285 1.017-2.285 4.488l-.002.662c-.004.64-.007 1.35.011 2.091.083 3.394.626 6.74 3.78 7.57 1.454.383 2.703.463 3.709.408 1.823-.1 2.847-.647 2.847-.647l-.06-1.317s-1.303.41-2.767.36c-1.45-.05-2.98-.156-3.215-1.928a4 4 0 0 1-.033-.496s1.424.346 3.228.428c1.103.05 2.137-.064 3.188-.189zm1.613-2.47H11.13v-4.08c0-.859-.364-1.295-1.091-1.295-.804 0-1.207.517-1.207 1.541v2.233H7.168V5.89c0-1.024-.403-1.541-1.207-1.541-.727 0-1.091.436-1.091 1.296v4.079H3.197V5.522q0-1.288.66-2.046c.456-.505 1.052-.764 1.793-.764.856 0 1.504.328 1.933.983L8 4.39l.417-.695c.429-.655 1.077-.983 1.934-.983.74 0 1.336.259 1.791.764q.662.757.661 2.046z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="px-3 mt-2">
                        <h4 class="fw-bold mb-0">Mastodon</h4>
                        <p class="mb-0">
                            <a class="text-warning" href="https://mas.to/@specter2426" target="_blank">specter2426</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mx-auto my-5 border rounded p-3 text-start">
        <form method="{{ new_message_form.vars.method }}" id="{{ new_message_form.vars.id }}" name="{{ new_message_form.vars.full_name }}" action="{{ new_message_form.vars.action }}">
            <div class="mb-3">
                <label class="form-label" for="{{ new_message_form.name.vars.id }}">{{ new_message_form.name.vars.label }}</label>
                <input class="form-control" id="{{ new_message_form.name.vars.id }}" name="{{ new_message_form.name.vars.full_name }}" value="{{ new_message_form.name.vars.value }}" type="text" placeholder="Full Name" autofocus required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="{{ new_message_form.email.vars.id }}">{{ new_message_form.email.vars.label }}</label>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <input class="form-control" id="{{ new_message_form.email.vars.id }}" name="{{ new_message_form.email.vars.full_name }}" value="{{ app.user.email }}" type="text" placeholder="email@domain.com" required>
                {% else %}
                <input class="form-control" id="{{ new_message_form.email.vars.id }}" name="{{ new_message_form.email.vars.full_name }}" value="{{ new_message_form.email.vars.value }}" type="text" placeholder="email@domain.com" required>
                {% endif %}
            </div>
            <div class="mb-3">
                <label class="form-label" for="{{ new_message_form.message.vars.id }}">{{ new_message_form.message.vars.label }}</label>
                <textarea class="form-control" id="{{ new_message_form.message.vars.id }}" name="{{ new_message_form.message.vars.full_name }}" rows="6" placeholder="I need help with..."></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" id="{{ new_message_form.submit.vars.id }}" name="{{ new_message_form.submit.vars.full_name }}">{{ new_message_form.submit.vars.label }}</button>
            </div>
        </form>
    </div>

</div>
{% endblock %}
