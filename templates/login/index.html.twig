{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold text-body-emphasis">Login</h1>
    <div class="col-lg-6 mx-auto my-5 border rounded p-3 text-start">
        {% if error %}
        <div class="alert alert-danger">
            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        </div>
        {% endif %}
        {% for flash in app.flashes('resetPasswordSuccess') %}
        <div class="alert alert-success">
            <p>{{ flash }}</p>
        </div>
        {% endfor %}
        <form method="post" action="{{ path('app_login') }}">
            <div class="mb-3">
                <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" placeholder="Email" required autofocus>
            </div>
            <div class="mb-3">
                <input class="form-control" type="password" id="password" name="_password" placeholder="Password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Login</button>
                <a class="btn bg-warning text-light" href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
            </div>
        </form>
    </div>
</div>

{% endblock %}
